// Common helper to render a story as a sentence (optional)
function toSentence(story) {
  return `As a ${story.asA}, I want ${story.iWant} so that ${story.soThat}.`;
}

// Example usage:
console.log(userStories.map(toSentence).join("\n"));

module.exports = { userStories, toSentence };
